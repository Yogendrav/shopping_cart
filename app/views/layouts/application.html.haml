    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
    / - if user_signed_in?
    /   = link_to "Logout", destroy_user_session_path, :class => "btn btn-primary"
    /   |
    /   = link_to "Product", products_path, :class => "btn btn-primary"
    / - else
    /   = link_to "login", user_session_path, :class => "btn btn-primary"
    /   |
    /   = link_to "Registration", new_user_registration_path, :class => "btn btn-primary"
    = yield