%div{style: "margin-left:20px;"}
  = form_for( @category , :url => categories_url ) do |f|
    %ul
      - @category.errors.full_messages.each do |error|
        = error
    %p
      = f.label :parent
      = f.select("parent_id", @categories.collect{|p| [ p.name, p.id ] }, {:include_blank => 'Select category'})
    %p
      = f.label :name
      = f.text_field :name , :cols => "50", :rows => "5"
    %p
      = f.submit