/                   %li
/                     %p
/                       = link_to "#{sub_category.name}", category_path(sub_category), :class => "btn btn-mini"
/                       = #link_to 'Destroy', category_path(sub_category), :confirm => 'Are you sure?',:method => :delete, :class => 'btn btn-mini btn-danger'
/                       = #link_to "Edit", edit_category_path(category), :class => 'btn btn-mini',:remote => true
